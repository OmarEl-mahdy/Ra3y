<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"

    android:orientation="vertical"
    tools:context=".vaccine">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal"
        android:text="Vaccinations"
        android:textColor="@color/blue"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/cb_vaccine_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Canine Distemper Virus" />

    <CheckBox
        android:id="@+id/cb_vaccine_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Canine Parvovirus" />

    <CheckBox
        android:id="@+id/cb_vaccine_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Canine Adenovirus-2 (Hepatitis)" />

    <CheckBox
        android:id="@+id/cb_vaccine_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rabies Virus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>
    </LinearLayout>

</LinearLayout>