<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/gradient" android:gravity="center" android:orientation="vertical"
    tools:context=".sitterRequest">


    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:paddingStart="20dp"
            android:text="Sofia"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="160dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="69dp"
            android:layout_height="54dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="@android:dimen/app_icon_size"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingClass,MissingConstraints"
            tools:layout_editor_absoluteX="145dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="18dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/style_tv"
                    android:layout_width="4dp"
                    android:layout_height="42dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Phone Number:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="116dp"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="5"
                    android:text="19991"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="363dp"
                android:layout_height="match_parent"
                android:layout_margin="18dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/mail" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/style_tv"
                    android:layout_width="75dp"
                    android:layout_height="44dp"
                    android:layout_weight="0"
                    android:text="Email:"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="10"
                    android:gravity="center|clip_vertical"
                    android:text="sofia@gmail.com"
                    android:textAlignment="center"
                    tools:ignore="RtlCompat" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_margin="18dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0"
                    android:src="@drawable/ic_baseline_business_center_24" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0"
                    android:text="Years of Experience:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="5"
                    android:text="4 years"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="18dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0"
                    android:src="@drawable/ic_baseline_attach_money_24" />

                <TextView
                    android:id="@+id/pricefield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0"
                    android:textSize="15dp"
                    android:text="Price/hour(L.E):"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="2"

                    android:text="FREE"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_margin="18dp"
                android:gravity="start|top">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0"
                    android:textSize="15dp"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:textSize="15dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Location:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:text="Giza, \nDokki, \nElTahrir street"
                    android:textAlignment="center" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="15dp" android:orientation="horizontal">
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:menu="@menu/nav_bar"

        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>